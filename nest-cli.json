{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"plugins": [
			{
				"name": "@nestjs/swagger/plugin",
				"options": {
					"classValidatorShim": true,
					"introspectComments": true,
					"controllerKeyOfComment": "description",
					"dtoFileNameSuffix": [
						".entity.ts",
						".dto.ts",
						".interface.ts"
					],
					"controllerFileNameSuffix": [
						".controller.ts"
					]
				}
			}
		],
		"assets": [
			{
				"include": "resources/**/*",
				"exclude": "resources/images/*",
				"watchAssets": true
			},
			{
				"include": "**/*.css",
				"watchAssets": true
			}
		]
	}
}
