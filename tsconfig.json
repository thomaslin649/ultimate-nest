{
	"compilerOptions": {
		"module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
		"jsx": "react",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"baseUrl": "src",
		"incremental": true,
		"skipLibCheck": true,
		"paths": {
			"@common/*": ["./common/*"],
			"@modules/*": ["./modules/*"],
			"@entities": ["./entities/index"],
			"@lib/*": ["./lib/*"],
			"@mocks": ["./_mocks_/index"]
		}
	},
	"include": ["test/**/*", "src/**/*"]
}
