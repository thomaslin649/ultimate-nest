{
	"extends": "@rubiin/tsconfig",
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "dist",
		"paths": {
			"@lib/*": ["./lib/*"],
			"@common/*": ["./common/*"],
			"@modules/*": ["./modules/*"],
			"@entities": ["./entities"],
			"@mocks": ["./_mocks_"],
			"@generated": ["./generated"]
		},
	},
	"include": ["test/**/*", "src/**/*",".eslintrc.cjs"],
	"exclude": ["node_modules", "dist"],
	"types": ["./src/common/types/global.d.ts"]
}
